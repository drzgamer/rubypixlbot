  <%= javascript_include_tag 'jquery/jquery.js', 'jquery/jquery-ui.js' %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="adminbar">
	  <nav>
		  <ul>
			  <li><%= link_to("Pixlbot", root_path + "dashboard") %>
				<ul>
					<li><%= link_to("Dashboard", root_path + "dashboard") %></li>
				</ul>
			  
			  </li>
			  <li><a href="#">New</a>
				  <ul>
					  <li><%= link_to("Post", root_path + "dashboard/posts/new") %></li>
