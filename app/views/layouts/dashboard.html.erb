				  <li><a>Log Out</a></li>
			  </ul>
			
			</li>

		</ul>
	</nav>
	
	

	</div>

	<div id="sidebar">
	  <div class ="sMenu" name ="Dashboard">
		<a href="<%= root_url + "dashboard/" %>"><div class=sHeader >Dashboard</div></a>
		<ul>
		  <a href="<%= root_url + "dashboard/" %>"><li>Home</li></a>
		</ul>
	  </div>
	  <div class ="sMenu" name ="Posts">
		<a href="<%= root_url + "dashboard/posts" %>"><div class=sHeader >Posts</div></a>
