<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Type</th>
      <th>Author</th>
	  <th>Category</th>
      <th>Date</th>
      <th>Title</th>
      <th>Content</th>
      <th>Excerpt</th>
      <th>Status</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.post_type %></td>
        <td><%= post.author %></td>
		<td><%= post.category %></td>
        <td><%= post.date %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.excerpt %></td>
        <td><%= post.status %></td>
        <td><%= post.name %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
