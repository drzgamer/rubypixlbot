<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table id = "post_table">
  <thead>
    <tr class="tableheader">
		<th>Title</th>
		<th>Authors</th>
		<th>Categories</th>
		<th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class ="tablerow">
		<% if post.title == "" %>
		  <td style ="font-size: 16px;"><%= link_to "(no title)", dashboard_url + "/posts/" + post.name + "/edit" %></td>
		<%else %>
		  <td style ="font-size: 16px;"><%= link_to post.title, dashboard_url + "/posts/" + post.name + "/edit" %></td>
		<% end %>
        
        <td><%= post.author %></td>
		<td><%= post.getcat %></td>
        <td><%= post.updated_at.in_time_zone('Eastern Time (US & Canada)').strftime("Last Modified %m/%d/%Y")      %></td>


        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<% if false %>
  <td><%= post.id %></td>
  <td><%= post.post_type %></td>
  <td><%= post.content %></td>
  <td><%= post.excerpt %></td>
  <td><%= post.status %></td>
  <td><%= post.name %></td>
  <td><%= link_to 'Show', post %></td>
  <td><%= link_to 'Edit', edit_post_path(post) %></td>
  <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>